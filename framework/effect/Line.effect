// line effect
{
    "name"  	: "line",
    
	"priority"	: "opaque",
	
    "attributeBindings" : {
        "startPosition"			: "geometry.vertex.attribute.startPosition",
		"stopPosition"			: "geometry.vertex.attribute.stopPosition",
		"weights"				: "geometry.vertex.attribute.weights"
    },
    
    "uniformBindings"   : {
        "diffuseColor"          : "material.diffuseColor",
		"lineThickness"			: "material.lineThickness",
		"modelToWorldMatrix"    : "transform.modelToWorldMatrix",
		"worldToScreenMatrix"   : { "property" : "camera.worldToScreenMatrix", "source" : "renderer" },
		"viewport"				: { "property" : "canvas.viewport", "source" : "root" }
    },
    
    "macroBindings" : {
        "DIFFUSE_COLOR"         : "material.diffuseColor",
        "LINE_THICKNESS"        : "material.lineThickness",
        "MODEL_TO_WORLD"        : "transform.modelToWorldMatrix",
        "VIEWPORT"              : { "property" : "canvas.viewport", "source" : "root" }
    },

    "stateBindings" : {
        "blendMode"             : "material.blendMode",
        "colorMask"             : "material.colorMask",
        "depthMask"             : "material.depthMask",
        "depthFunc"             : "material.depthFunc",
        "triangleCulling"       : "material.triangleCulling",
        "stencilFunc"           : "material.stencilFunc",
        "stencilRef"            : "material.stencilRef",
        "stencilMask"           : "material.stencilMask",
        "stencilFailOp"         : "material.stencilFailOp",
        "stencilZFailOp"        : "material.stencilZFailOp",
        "stencilZPassOp"        : "material.stencilZPassOp",
        "scissorBox.x"          : { "property" : "scissorBox.x",        "source" : "renderer" },
        "scissorBox.y"          : { "property" : "scissorBox.y",        "source" : "renderer" },
        "scissorBox.width"      : { "property" : "scissorBox.width",    "source" : "renderer" },
        "scissorBox.height"     : { "property" : "scissorBox.height",   "source" : "renderer" },
        "priority"              : "material.priority",
        "zsort"                 : "material.zsort"
    },
    
    "blendMode"         : ["one", "zero"],
    "colorMask"         : true,
    "depthTest"         : [true, "less_equal"],
    "triangleCulling"   : "none",
    "stencilTest"       : ["always", 0, 1, ["keep", "keep", "keep"]],
    "scissorTest"       : false,
    "scissorBox"        : [0, 0, -1, -1],
    "priority"          : "opaque",
    "zsort"             : false,
    
	"techniques" : [{
		"passes"    : [{
			"vertexShader" : "#pragma include('Line.vertex.glsl')",
			"fragmentShader" : "#pragma include('Line.fragment.glsl')"
		}]
	}]
}
